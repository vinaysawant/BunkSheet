<h1>Sign In</h1>

<%= form_for(:session, :url=>sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%=	f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%=	f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" ,class: "btn btn-large btn-primary" %><br />
	</div>
<% end %>

<p>New User? <%= link_to "Sign up now!", signup_path %></p>
