<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Lecture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.day %></td>
    <td><%= schedule.lecture %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Delete from schedule', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>
